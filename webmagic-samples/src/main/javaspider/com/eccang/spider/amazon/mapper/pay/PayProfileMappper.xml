<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eccang.spider.amazon.dao.dict.PayProfileDao">

    <cache eviction="LRU" type="com.eccang.spider.base.service.RedisCacheService"/>

    <resultMap id="PayProfileResultMap" type="PayProfile">
        <id property="id" column="bppp_id"/>
        <result property="businessCode" column="besb_code"/>
        <result property="urlPrice" column="bppp_url_price"/>
        <result property="priorityMutiple" column="bppp_priority_mutiple"/>
        <result property="customMutiple" column="bppp_custom_mutiple"/>
        <result property="dayLimit" column="bppp_day_limit"/>
        <result property="countLimit" column="bppp_count_limit"/>
        <result property="createTime" column="bppp_create_time"/>
        <result property="updateTime" column="bppp_update_time"/>
    </resultMap>

    <select id="findByCode" resultMap="PayProfileResultMap">
        select * from base_pay_package_profile
        WHERE
        besb_code = #{0};
    </select>

    <update id="update" parameterType="PayProfile">
        UPDATE base_pay_package_profile
        SET
        bppp_url_price = #{urlPrice},
        bppp_priority_mutiple = #{priorityMutiple},
        bppp_custom_mutiple = #{customMutiple}
        where
        besb_code = #{businessCode};

    </update>

</mapper>