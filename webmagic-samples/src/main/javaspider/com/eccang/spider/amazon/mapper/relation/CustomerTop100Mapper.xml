<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.eccang.spider.amazon.dao.relation.CustomerTop100Dao">

    <cache eviction="LRU" type="com.eccang.spider.base.service.RedisCacheService"/>

    <resultMap id="CustomerTop100Map" type="CustomerTop100">
        <id column="rct_id" property="id"/>
        <result column="bas_code" property="siteCode"/>
        <result column="bec_code" property="customerCode"/>
        <result column="rct_crawl" property="crawl"/>
        <result column="rct_frequency" property="frequency"/>
        <result column="rct_sync_time" property="syncTime"/>
        <result column="rct_extra" property="extra"/>
        <result column="rct_create_time" property="createTime"/>
        <result column="rct_update_time" property="updateTime"/>
    </resultMap>
    
    <insert id="add" parameterType="CustomerTop100">
        INSERT INTO relation_customer_top100(
          bas_code,
          bec_code,
          rct_crawl,
          rct_frequency,
          rct_sync_time,
          rct_extra
        ) VALUES (
          #{siteCode},
          #{customerCode},
          #{crawl},
          #{frequency},
          #{syncTime},
          #{extra}
        )
    </insert>

    <select id="findNeedGenerateBatch" resultMap="CustomerTop100Map">
        SELECT
          *
        FROM
          relation_customer_top100
        WHERE
          rct_crawl = 1 AND
          CURRENT_TIMESTAMP - rct_sync_time > rct_frequency * 3600
          OR rct_sync_time is null;
    </select>

    <update id="update" parameterType="CustomerTop100">
        UPDATE
          relation_customer_top100
        SET
          bas_code = #{siteCode},
          bec_code = #{customerCode},
          rct_crawl = #{crawl},
          rct_frequency = #{frequency},
          rct_sync_time = #{syncTime},
          rct_extra = #{extra}
        WHERE
          rct_id = #{id}
    </update>
</mapper>