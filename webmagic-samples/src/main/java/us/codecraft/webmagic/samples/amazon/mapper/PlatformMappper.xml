<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="us.codecraft.webmagic.samples.amazon.dao.dict.PlatformDao">

    <resultMap id="PlatformResultMap" type="Platform">
        <result property="id" column="bp_id"/>
        <result property="code" column="bp_code"/>
        <result property="name" column="bp_name"/>
        <result property="status" column="bp_status"/>
        <result property="introduce" column="bp_introduce"/>
        <result property="extra" column="bp_extra"/>
    </resultMap>
    
    <select id="findByCode" resultMap="PlatformResultMap">
        SELECT * FROM base_platform WHERE bp_code = #{0};
    </select>

</mapper>