<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="us.codecraft.webmagic.samples.base.dao.UserAgentDao">

    <resultMap id="UserAgentResultMap" type="UserAgent">
        <result property="id" column="bua_ip"/>
        <result property="userAgent" column="bua_user_agent"/>
        <result property="useCount" column="bua_use_count"/>
        <result property="updatetime" column="bua_update_time"/>
    </resultMap>

    <select id="update" resultMap="UserAgentResultMap">
        UPDATE base_user_agent SET bua_use_count = #{useCount},bua_update_time=#{updatetime};
    </select>

    <select id="findAll" resultMap="UserAgentResultMap">
        SELECT * FROM base_user_agent;
    </select>

</mapper>