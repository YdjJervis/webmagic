<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="us.codecraft.webmagic.samples.amazon.dao.CustomerAsinDao">

    <resultMap id="CustomerAsinMap" type="CustomerAsin">
        <result column="rca_id" property="id"/>
        <result column="bec_code" property="customerCode"/>
        <result column="saa_asin" property="asin"/>
        <result column="rca_status" property="status"/>
        <result column="rca_create_time" property="createtime"/>
        <result column="rca_update_time" property="updatetime"/>
    </resultMap>

    <select id="findByCustomerCode" resultMap="CustomerAsinMap">
      select * from relation_customer_asin WHERE bec_code = #{customerCode};
    </select>

    <update id="update" parameterType="CustomerAsin">
        UPDATE relation_customer_asin SET
        rca_status = #{status}
        where
        bec_code = #{customerCode} and saa_asin = #{asin}
    </update>

    <insert id="addAll" parameterType="java.util.List">
        INSERT INTO relation_customer_asin(
        bec_code,saa_asin,rca_status
        )
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.customerCode},#{item.asin},#{item.status}
            )
        </foreach>
    </insert>

    <select id="findByObject" resultMap="CustomerAsinMap">
        select * from relation_customer_asin WHERE bec_code = #{customerCode} and saa_asin = #{asin};
    </select>
</mapper>
