<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="us.codecraft.webmagic.samples.amazon.dao.AsinSourceDao">

    <resultMap id="AsinSourceResultMap" type="AsinSource">
        <result property="baasCode" column="baas_code"/>
        <result property="baasName" column="baas_name"/>
        <result property="updatetime" column="baas_update_time"/>
    </resultMap>

    <select id="find" resultMap="AsinSourceResultMap">
        SELECT * FROM base_amazon_asin_source WHERE baas_code = #{0};
    </select>

    <select id="findAll" resultMap="AsinSourceResultMap">
        SELECT * FROM base_amazon_asin_source;
    </select>

</mapper>