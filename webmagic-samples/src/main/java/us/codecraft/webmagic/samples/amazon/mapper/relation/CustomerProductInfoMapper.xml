<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="us.codecraft.webmagic.samples.amazon.dao.relation.CustomerProductInfoDao">

    <resultMap id="CustomerProductInfoMap" type="CustomerProductInfo">
        <result column="rcpi_id" property="id"/>
        <result column="bec_code" property="customerCode"/>
        <result column="bas_code" property="siteCode"/>
        <result column="rar_asin" property="asin"/>
        <result column="rar_root_asin" property="rootAsin"/>
        <result column="rcpi_extra" property="extra"/>
        <result column="rcpi_create_time" property="createTime"/>
        <result column="rcpi_update_time" property="updateTime"/>
    </resultMap>

    <insert id="add" parameterType="CustomerProductInfo">
        INSERT INTO relation_customer_product_info(
            bec_code,
            bas_code,
            rar_asin,
            rar_root_asin,
            rcpi_extra
        ) VALUES (
            #{customerCode},
            #{siteCode},
            #{asin},
            #{rootAsin},
            #{extra}
        )
    </insert>

    <select id="find" resultMap="CustomerProductInfoMap">
        SELECT * FROM relation_customer_product_info
        WHERE
        bec_code = #{0}
        AND
        bas_code = #{1}
        AND
        rar_asin = #{2}
    </select>

    <update id="update" parameterType="CustomerProductInfo">
        UPDATE relation_customer_product_info
        SET
        rar_root_asin = #{rootAsin},
        rcpi_extra = #{extra}
        WHERE
        bec_code = #{0}
        AND
        bas_code = #{1}
        AND
        rar_asin = #{2}
    </update>

</mapper>
